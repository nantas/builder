{
  "name": "builder",
  "version": "0.1.4",
  "description": "Fireball Project Builder",
  "author": "Firebox Technology",
  "hosts": {
    "editor": "^0.2.0",
    "editor-framework": "^0.3.15"
  },
  "main": "main.js",
  "menus": {
    "i18n:MAIN_MENU.file.title/i18n:MAIN_MENU.panel.build": {
      "message": "builder:open",
      "accelerator": "CmdOrCtrl+Shift+B"
    }
  },
  "panels": {
    "panel": {
      "frame": "panel/builder.html",
      "type": "dockable",
      "title": "i18n:MAIN_MENU.panel.build",
      "width": 500,
      "min-width": 325,
      "height": 700,
      "min-height": 700,
      "messages": [
        "builder:state-changed"
      ],
      "profiles": {
        "project": {
          "title": "",
          "platform": "web-mobile",
          "startScene": "",
          "excludeScenes": []
        },
        "local": {
          "buildPath": "",
          "debug": false,
          "previewWidth": "1280",
          "previewHeight": "720"
        }
      }
    }
  }
}
